<h2>Регистрация</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <%= f.input :email, label: 'Введите Ваш E-mail' %><br />
  
  <%= f.input :password, label: 'Введите Ваш пароль' %><br />
  
  <%= f.input :password_confirmation, label: 'Повторите пароль' %><br />
  
  <%= f.submit "Зарегистрироваться" %>
<% end %>

<%= render "devise/shared/links" %>
